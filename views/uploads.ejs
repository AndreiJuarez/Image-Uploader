<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles-uploads.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Uploads</title>
</head>
<body>
    <section class="post-list">
        <% imagenes.forEach(entry =>{%>
            <a href="#modalbox-<%=entry.file_name%>" class="post">
                <figure class="post-image">
                    <img src=<%=entry.file_name%> alt="">
                </figure>
                <div class="post-overlay">
                    <p>
                        <span class="post-likes">Clic to see details</span>
                    </p>
                </div>
            </a>
            <div id="modalbox-<%=entry.file_name%>" class="modal">
                <div class="modalContent">
                    <h1>Image Details</h1>
                    <p>You can copy the URL or delete this image</p>
                    <img src=<%=entry.file_name%> alt="" width="40%">
                    <br>
                    <div class="cont">
                        <div class="label">
                            Image Link, Select All and Copy
                        </div>
                        <div class="copy-text">
                            <form action="/delete" method="POST">
                                <input type="text" class="text" name="img" value=<%=entry.file_name%> readonly>
                                <br>
                                <button type="submit">Delete</button>
                            </form>
                        </div>

                    </div>
                    <a href="#" class="modalClose">&times;</a>
                </div>
            </div>
        <% }) %>
    </section>
</body>
</html>